<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/resultados">
    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cero"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/uno" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <Button
            android:text="borrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/borrar"
            app:layout_constraintEnd_toStartOf="@+id/division" android:layout_marginEnd="8dp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/tres"/>
    <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/division" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/multiplicacion"/>
    <Button
            android:text="Result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resultado"
            app:layout_constraintStart_toEndOf="@+id/cero" android:layout_marginStart="8dp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/dos"/>
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uno"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/cuatro"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tres"
            app:layout_constraintEnd_toStartOf="@+id/multiplicacion"
            android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/seis"/>
    <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/multiplicacion" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/resta"/>
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dos"
            app:layout_constraintStart_toEndOf="@+id/uno"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/cinco"/>
    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cuatro"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/siete"/>
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seis"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/resta"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/nueve"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resta" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/suma"/>
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cinco"
            app:layout_constraintStart_toEndOf="@+id/cuatro" android:layout_marginStart="8dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/ocho"/>
    <TextView
            android:text="Calculadora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Titulo" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="30sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/Titulo"
            app:layout_constraintHorizontal_bias="0.898" android:textSize="24sp"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numero" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintHorizontal_bias="0.895"
            android:textSize="24sp"/>
    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/siete" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/numero"
    />
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ocho"
            android:layout_marginTop="72dp" app:layout_constraintTop_toBottomOf="@+id/numero"
            app:layout_constraintStart_toEndOf="@+id/siete" android:layout_marginStart="8dp"/>
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nueve" app:layout_constraintEnd_toStartOf="@+id/suma" android:layout_marginEnd="8dp"
            android:layout_marginTop="72dp" app:layout_constraintTop_toBottomOf="@+id/numero"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/suma" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="72dp" app:layout_constraintTop_toBottomOf="@+id/numero"/>
</android.support.constraint.ConstraintLayout>